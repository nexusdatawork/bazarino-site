---
type AchadoItem = import("../data/achadosEditions").AchadoItem;

type Props = {
  items: AchadoItem[];
  variant?: "list" | "grid";
};

const { items, variant = "list" } = Astro.props;

function formatBRL(value: number) {
  return value.toLocaleString("pt-BR", { style: "currency", currency: "BRL" });
}

function discountPercent(price: number, oldPrice?: number) {
  if (!oldPrice || oldPrice <= price) return null;
  const pct = Math.round(((oldPrice - price) / oldPrice) * 100);
  return pct > 0 ? pct : null;
}

---

{variant === "grid" ? (
  <div class="grid gap-4 sm:grid-cols-2 lg:grid-cols-3">
    {items.map((p) => {
      const pct = discountPercent(p.price, p.oldPrice);
      return (
        <article class="rounded-xl border border-slate-200 p-4 hover:border-slate-300 transition">
          <div class="aspect-[16/10] w-full rounded-lg bg-slate-100 overflow-hidden">
            <img src={p.image || '/images/placeholders/image-not-found.svg'} alt={p.name} class="h-full w-full object-cover" loading="lazy" decoding="async" onerror="this.onerror=null;this.src='/images/placeholders/image-not-found.svg';" />
          </div>

          <h3 class="mt-3 font-semibold leading-snug">{p.name}</h3>
          <p class="mt-1 text-sm text-slate-600">{p.vendor} • {p.category}</p>

          <div class="mt-3 flex items-baseline gap-2">
            <p class="text-lg font-semibold">{formatBRL(p.price)}</p>
            {p.oldPrice ? <p class="text-sm text-slate-500 line-through">{formatBRL(p.oldPrice)}</p> : null}
            {pct ? (
              <span class="ml-auto rounded-full bg-slate-900 px-2 py-0.5 text-xs text-white">-{pct}%</span>
            ) : null}
          </div>

          <div class="mt-2 text-sm text-slate-700">
            Nota: {typeof p.score === "number" ? p.score.toFixed(1) : "—"}
          </div>


          <div class="mt-4 flex items-center justify-between text-sm">
            <a class="underline" href={`/achados/categoria/${p.category}`}>Categoria</a>
            <a class="underline" href={p.affiliateUrl} target="_blank" rel="noreferrer">Ver oferta</a>
          </div>
        </article>
      );
    })}
  </div>
) : (
  <div class="overflow-hidden rounded-xl border border-slate-200">
    <div class="hidden md:grid grid-cols-[56px_96px_1fr_140px_110px_120px] gap-4 bg-slate-50 px-4 py-3 text-xs font-semibold uppercase tracking-wide text-slate-600">
      <div>#</div>
      <div></div>
      <div>Produto</div>
      <div>Fornecedor</div>
      <div>Preço</div>
      <div class="text-right">Ação</div>
    </div>

    <div class="divide-y divide-slate-200">
      {items.map((p, idx) => {
        const pct = discountPercent(p.price, p.oldPrice);
        return (
          <div class="grid grid-cols-[56px_1fr] md:grid-cols-[56px_96px_1fr_140px_110px_120px] gap-4 px-4 py-4 hover:bg-slate-50 transition">
            <div class="flex items-start">
              <div class="mt-0.5 inline-flex h-9 w-9 items-center justify-center rounded-lg bg-slate-100 text-sm font-semibold text-slate-700">
                {idx + 1}
              </div>
            </div>

            <div class="hidden md:block">
              <div class="h-20 w-20 rounded-lg bg-slate-100 overflow-hidden">
                <img src={p.image || '/images/placeholders/image-not-found.svg'} alt={p.name} class="h-full w-full object-cover" loading="lazy" decoding="async" onerror="this.onerror=null;this.src='/images/placeholders/image-not-found.svg';" />
              </div>
            </div>

            <div class="min-w-0">
              <p class="font-semibold leading-snug text-slate-900 truncate">{p.name}</p>

              <div class="mt-1 flex flex-wrap items-center gap-2 text-xs text-slate-600">
                <span class="rounded-full bg-slate-100 px-2 py-0.5">{p.category}</span>
                Nota {typeof p.score === "number" ? p.score.toFixed(1) : "—"}
                {pct ? (
                  <span class="rounded-full bg-slate-900 px-2 py-0.5 text-white">-{pct}%</span>
                ) : null}
              </div>

              <div class="mt-2 md:hidden text-sm text-slate-700">
                <span class="text-slate-600">{p.vendor}</span>
                <span class="mx-2 text-slate-300">•</span>
                <span class="font-semibold">{formatBRL(p.price)}</span>
                {p.oldPrice ? <span class="ml-2 text-slate-500 line-through">{formatBRL(p.oldPrice)}</span> : null}
              </div>
            </div>

            <div class="hidden md:block text-sm text-slate-700">{p.vendor}</div>

            <div class="hidden md:block">
              <p class="text-sm font-semibold text-slate-900">{formatBRL(p.price)}</p>
              {p.oldPrice ? <p class="text-xs text-slate-600 line-through">{formatBRL(p.oldPrice)}</p> : null}
            </div>

            <div class="hidden md:flex items-center justify-end">
              <a class="inline-flex items-center justify-center rounded-lg bg-slate-900 px-3 py-2 text-sm font-semibold text-white hover:bg-slate-800 transition"
                 href={p.affiliateUrl} target="_blank" rel="noreferrer">
                Ver oferta
              </a>
            </div>

            <div class="md:hidden col-span-2">
              <a class="inline-flex items-center justify-center rounded-lg bg-slate-900 px-3 py-2 text-sm font-semibold text-white hover:bg-slate-800 transition"
                 href={p.affiliateUrl} target="_blank" rel="noreferrer">
                Ver oferta
              </a>
              <a class="ml-3 text-sm underline" href={`/achados/categoria/${p.category}`}>Ver categoria</a>
            </div>
          </div>
        );
      })}
    </div>
  </div>
)}
