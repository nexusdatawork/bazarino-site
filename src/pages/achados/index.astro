---
import Layout from "../../layouts/Layout.astro";
import { achadosCategories } from "../../data/achadosCategories";
import { getLatestAchados } from "../../data/achados";

const latest = getLatestAchados(12);
---

<Layout title="Achados">
  <section class="space-y-10">
    <header>
      <h1 class="text-2xl font-semibold">Achados</h1>
      <p class="mt-4 text-slate-600 max-w-3xl">
        Novidades selecionadas diariamente. Sem ruído, sem cilada.
      </p>
    </header>

    <!-- Últimos achados -->
    <section class="space-y-4">
      <div class="flex items-end justify-between gap-4">
        <h2 class="text-lg font-semibold">Últimos achados</h2>
        <span class="text-sm text-slate-500">Mock diário</span>
      </div>

      {latest.length === 0 ? (
        <p class="text-slate-600">Ainda não há achados publicados.</p>
      ) : (
        <div class="grid gap-4 sm:grid-cols-2 lg:grid-cols-3">
          {latest.map((a) => (
            <article class="rounded-lg border border-slate-200 p-4 hover:border-slate-300">
              <div class="flex items-start justify-between gap-3">
                <h3 class="font-semibold leading-snug">{a.title}</h3>
                <span class="text-xs text-slate-500 whitespace-nowrap">
                  {new Date(a.createdAt).toLocaleDateString("pt-BR")}
                </span>
              </div>

              <p class="mt-2 text-sm text-slate-600">{a.store}</p>

              <div class="mt-3 flex items-center justify-between">
                <p class="font-semibold">R$ {a.price.toFixed(2)}</p>
                <a class="text-sm underline" href={`/achados/${a.category}`}>
                  Ver categoria
                </a>
              </div>

              <a class="mt-3 inline-block text-sm underline" href={a.href} target="_blank" rel="noreferrer">
                Ver oferta
              </a>
            </article>
          ))}
        </div>
      )}
    </section>

    <!-- Categorias -->
    <section class="space-y-4">
      <h2 class="text-lg font-semibold">Explorar por categoria</h2>

      <div class="grid gap-4 sm:grid-cols-2 lg:grid-cols-3">
        {achadosCategories.map((c) => (
          <a
            href={`/achados/${c.slug}`}
            class="rounded-lg border border-slate-200 p-4 hover:border-slate-300"
          >
            <p class="font-semibold">{c.title}</p>
            <p class="mt-2 text-sm text-slate-600">{c.description}</p>
          </a>
        ))}
      </div>
    </section>
  </section>
</Layout>
