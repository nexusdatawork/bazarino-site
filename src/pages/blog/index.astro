---
import Layout from "@/layouts/Layout.astro";
import { getCollection } from "astro:content";

type BlogEntry = {
  slug: string;
  body: string;
  data: {
    title: string;
    description: string;
    pubDate: Date;
    tags: string[];
    author: string;
    draft: boolean;
    updatedDate?: Date;
    image?: string;
    canonical?: string;
  };
};

const PAGE_SIZE = 12;

const posts = (await getCollection("blog"))
  // Evita slugs com subpastas (ex: "bkp/post"), que quebram a rota /blog/[slug]
  .filter((p) => !p.slug.includes("/"))
  .filter((p) => !p.data?.draft)
  .sort((a, b) => {
    const da = a.data?.pubDate ? new Date(a.data.pubDate).getTime() : 0;
    const db = b.data?.pubDate ? new Date(b.data.pubDate).getTime() : 0;
    return db - da;
  }) as unknown as BlogEntry[];

const totalPages = Math.max(1, Math.ceil(posts.length / PAGE_SIZE));

const featured = posts[0];
const recent = posts.slice(1, 4);
const more = posts.slice(4, 4 + 9); // “mais artigos” só um bloco, o resto vai para paginação

function formatDate(date: Date | string | number | null | undefined): string {
  if (!date) return "";
  return new Intl.DateTimeFormat("pt-BR", {
    day: "2-digit",
    month: "short",
    year: "numeric",
  }).format(new Date(date));
}

function readingTime(body: string | null | undefined): number | null {
  if (!body) return null;
  const words = body.trim().split(/\s+/).filter(Boolean).length;
  return Math.max(1, Math.round(words / 200));
}

function coverFor(post: BlogEntry, w = 900, h = 520): string {
  return post.data.image ?? `https://picsum.photos/seed/${encodeURIComponent(post.slug)}/${w}/${h}`;
}

function onErrorToPicsum(seed: string, w = 900, h = 520) {
  const url = `https://picsum.photos/seed/${encodeURIComponent(seed)}/${w}/${h}`;
  return `this.onerror=null;this.src='${url}';`;
}

function safeTags(tags: unknown): string[] {
  return Array.isArray(tags) ? tags.filter((t) => typeof t === "string") : [];
}
---

<Layout title="Blog | O Bazarino">
  <!-- HERO: largura total + card suspenso -->
  <section class="relative overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-b from-blue-950 via-blue-900 to-blue-800"></div>
    <div class="absolute -top-24 left-1/2 h-72 w-[900px] -translate-x-1/2 rounded-full bg-white/10 blur-3xl"></div>
    <div class="absolute -bottom-28 left-1/2 h-72 w-[900px] -translate-x-1/2 rounded-full bg-cyan-300/10 blur-3xl"></div>

    <div class="relative mx-auto max-w-6xl px-4 py-14 sm:py-16">
      <div class="mx-auto max-w-4xl rounded-3xl border border-white/15 bg-white/10 px-6 py-12 text-center shadow-[0_30px_80px_rgba(0,0,0,0.35)] backdrop-blur sm:px-10 sm:py-16">
        <span class="inline-flex items-center rounded-full border border-white/20 bg-white/10 px-3 py-1 text-xs font-semibold text-white/90">
          Blog do Bazarino
        </span>

        <h1 class="mt-5 text-3xl font-semibold tracking-tight text-white sm:text-5xl">
          Guias, dicas e curadoria<br class="hidden sm:block" /> para comprar melhor
        </h1>

        <p class="mx-auto mt-4 max-w-xl text-sm leading-relaxed text-white/80 sm:text-base">
          Conteúdo direto e útil. Sem enrolação, sem clickbait.
          <span class="block">Apenas o que você precisa saber.</span>
        </p>

        {totalPages > 1 ? (
          <div class="mt-6 flex justify-center">
            <a
              href="/blog/page/2"
              class="rounded-full bg-white px-5 py-2 text-sm font-semibold text-slate-900 shadow-sm hover:bg-slate-100 transition"
            >
              Ver posts antigos →
            </a>
          </div>
        ) : null}
      </div>
    </div>
  </section>

  <section class="mx-auto max-w-6xl px-4 py-10">
    <!-- EM DESTAQUE -->
    {featured ? (
      <section>
        <div class="mb-4 flex items-center gap-3">
          <span class="h-[2px] w-8 bg-blue-900"></span>
          <h2 class="text-sm font-semibold text-slate-900">Em Destaque</h2>
        </div>

        <a
          href={`/blog/${featured.slug}`}
          class="group grid overflow-hidden rounded-3xl border bg-white shadow-sm transition hover:-translate-y-0.5 hover:shadow-lg md:grid-cols-2"
        >
          <div class="relative">
            <img
              src={coverFor(featured, 1200, 700)}
              onerror={onErrorToPicsum(featured.slug, 1200, 700)}
              alt={featured.data.title}
              loading="eager"
              decoding="async"
              class="h-full w-full object-cover"
            />
            <span class="absolute left-4 top-4 rounded-full bg-blue-950/90 px-3 py-1 text-xs font-semibold text-white">
              {safeTags(featured.data.tags)[0] ?? "Guia de Compra"}
            </span>
          </div>

          <div class="p-6 md:p-8">
            <div class="flex flex-wrap items-center gap-2 text-xs text-slate-500">
              <span>{formatDate(featured.data.updatedDate ?? featured.data.pubDate)}</span>
              {readingTime(featured.body) && <span>• {readingTime(featured.body)} min</span>}
            </div>

            <h3 class="mt-3 text-xl font-semibold leading-tight text-slate-900 transition group-hover:text-blue-800 md:text-2xl">
              {featured.data.title}
            </h3>

            <p class="mt-3 text-sm leading-relaxed text-slate-600">
              {featured.data.description}
            </p>

            <div class="mt-5 inline-flex items-center gap-2 text-sm font-semibold text-blue-800">
              Ler agora
              <svg class="h-4 w-4 transition group-hover:translate-x-0.5" viewBox="0 0 24 24" fill="none" aria-hidden="true">
                <path d="M5 12h12" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" />
                <path d="M13 6l6 6-6 6" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round" />
              </svg>
            </div>
          </div>
        </a>
      </section>
    ) : (
      <p class="mt-10 text-slate-600">Nenhum post publicado ainda.</p>
    )}

    <!-- PUBLICAÇÕES RECENTES -->
    {recent.length ? (
      <section class="mt-12">
        <div class="mb-4 flex items-center gap-3">
          <span class="h-[2px] w-8 bg-blue-900"></span>
          <h2 class="text-sm font-semibold text-slate-900">Publicações Recentes</h2>
        </div>

        <div class="grid gap-4 md:grid-cols-3">
          {recent.map((post) => (
            <article class="group overflow-hidden rounded-3xl border bg-white shadow-sm transition hover:-translate-y-0.5 hover:shadow-lg">
              <a href={`/blog/${post.slug}`} class="block">
                <div class="relative">
                  <img
                    src={coverFor(post, 900, 560)}
                    onerror={onErrorToPicsum(post.slug, 900, 560)}
                    alt={post.data.title}
                    loading="lazy"
                    decoding="async"
                    class="h-44 w-full object-cover"
                  />
                  <span class="absolute left-3 top-3 rounded-full bg-white/90 px-2.5 py-1 text-[11px] font-semibold text-slate-900">
                    {safeTags(post.data.tags)[0] ?? "Guia"}
                  </span>
                </div>

                <div class="p-5">
                  <div class="flex flex-wrap items-center gap-2 text-xs text-slate-500">
                    <span>{formatDate(post.data.updatedDate ?? post.data.pubDate)}</span>
                    {readingTime(post.body) && <span>• {readingTime(post.body)} min</span>}
                  </div>

                  <h3 class="mt-2 line-clamp-2 text-base font-semibold leading-snug text-slate-900 transition group-hover:text-blue-800">
                    {post.data.title}
                  </h3>

                  <p class="mt-2 line-clamp-3 text-sm leading-relaxed text-slate-600">
                    {post.data.description}
                  </p>

                  <div class="mt-4 inline-flex items-center gap-2 text-sm font-semibold text-blue-800">
                    Continuar lendo
                    <svg class="h-4 w-4 transition group-hover:translate-x-0.5" viewBox="0 0 24 24" fill="none" aria-hidden="true">
                      <path d="M5 12h12" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" />
                      <path d="M13 6l6 6-6 6" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round" />
                    </svg>
                  </div>
                </div>
              </a>
            </article>
          ))}
        </div>
      </section>
    ) : null}

    <!-- MAIS ARTIGOS (prévia) -->
    {more.length ? (
      <section class="mt-12">
        <div class="mb-4 flex items-center gap-3">
          <span class="h-[2px] w-8 bg-blue-900"></span>
          <h2 class="text-sm font-semibold text-slate-900">Mais Artigos</h2>
        </div>

        <div class="grid gap-3 md:grid-cols-3">
          {more.map((post) => (
            <a
              href={`/blog/${post.slug}`}
              class="group flex items-start justify-between gap-4 rounded-2xl border bg-white p-4 shadow-sm transition hover:-translate-y-0.5 hover:shadow-md"
            >
              <div>
                <h3 class="text-sm font-semibold text-slate-900 transition group-hover:text-blue-800">
                  {post.data.title}
                </h3>
                <p class="mt-1 line-clamp-2 text-sm text-slate-600">{post.data.description}</p>
                <div class="mt-2 flex items-center gap-2 text-xs text-slate-500">
                  <span>{formatDate(post.data.updatedDate ?? post.data.pubDate)}</span>
                  {readingTime(post.body) && <span>• {readingTime(post.body)} min</span>}
                </div>
              </div>

              <svg class="mt-1 h-4 w-4 shrink-0 text-slate-400 transition group-hover:translate-x-0.5" viewBox="0 0 24 24" fill="none" aria-hidden="true">
                <path d="M5 12h12" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" />
                <path d="M13 6l6 6-6 6" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round" />
              </svg>
            </a>
          ))}
        </div>

        {totalPages > 1 ? (
          <div class="mt-8 flex justify-center">
            <a
              href="/blog/page/2"
              class="rounded-full border bg-white px-5 py-2 text-sm font-semibold text-slate-800 shadow-sm hover:bg-slate-50"
            >
              Ver posts antigos
            </a>
          </div>
        ) : null}
      </section>
    ) : null}
  </section>
</Layout>
