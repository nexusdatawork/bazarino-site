---
import "../styles/global.css";
const { title = "Bazarino" } = Astro.props;

import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---

<!doctype html>
<html lang="pt-BR">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta
      name="description"
      content="Bazarino — curadoria inteligente de ofertas confiáveis."
    />
  </head>

  <body class="min-h-screen flex flex-col bg-white text-slate-900">
    <Header />

    <main class="mx-auto w-full max-w-6xl flex-1 px-4 py-10">
      <slot />
    </main>

    <Footer />
  </body>
</html>