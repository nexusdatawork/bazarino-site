---
import "../styles/global.css";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

/**
 * Layout base do site.
 * Importa CSS global (Tailwind) e fornece um slot de head para SEO por página.
 */
const { title = "Bazarino" } = Astro.props;
---

<!doctype html>
<html lang="pt-BR">
  <head>
    {/* Charset primeiro: garante acentuação correta */}
    <meta charset="UTF-8" />

    {/* Responsividade */}
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    {/* Título padrão (páginas podem sobrescrever via props) */}
    <title>{title}</title>

    {/* Descrição padrão (páginas podem sobrescrever via slot="head") */}
    <meta
      name="description"
      content="Bazarino — curadoria inteligente de ofertas confiáveis."
    />

    {/* SEO extra por página (canonical, og, json-ld etc) */}
    
    {/*
      Schema.org (Organization + WebSite)
      Ajuda o Google a entender que "O Bazarino" é uma entidade/brand, não só um site.
    */}
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@graph": [
        {
          "@type": "Organization",
          "@id": `${Astro.site}#organization`,
          "name": "O Bazarino",
          "url": `${Astro.site}`,
          "logo": {
            "@type": "ImageObject",
            "url": `${Astro.site}bazarino.png`
          }
        },
        {
          "@type": "WebSite",
          "@id": `${Astro.site}#website`,
          "url": `${Astro.site}`,
          "name": "O Bazarino",
          "publisher": { "@id": `${Astro.site}#organization` },
          "inLanguage": "pt-BR"
        }
      ]
    })} />

    <slot name="head" />
  </head>

  <body class="min-h-screen flex flex-col bg-white text-slate-900">
    <Header />

    <main class="mx-auto w-full max-w-6xl flex-1 px-4 py-10">
      <slot />
    </main>

    <Footer />
  </body>
</html>
